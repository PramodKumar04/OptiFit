<MDScreenManager>:
    LoginScreen:
        name: 'login'
    SignupScreen:
        name: 'signup'
    PersonalDetailsScreen:
        name: 'personal_details'
    HomeScreen:
        name: 'home'
    ProfileSettingsScreen:
        name: 'profile_settings'
    WorkoutPlansScreen:
        name: 'workout_plans'
    MotivationScreen:
        name: 'motivation'

<LoginScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(10)
        size_hint: (None, None)
        size: (300, 400)  # Fixed size for centering
        pos_hint: {"center_x": 0.5, "center_y": 0.5}  # Centering

        MDTextField:
            id: email
            hint_text: "Email"
            helper_text: "Enter your email"
            helper_text_mode: "on_error"

        MDTextField:
            id: password
            hint_text: "Password"
            password: True
            helper_text: "Enter your password"
            helper_text_mode: "on_error"

        MDRaisedButton:
            text: "Login"
            on_release: root.login()

        MDRaisedButton:
            text: "Sign Up"
            on_release: app.root.current = 'signup'

        MDRaisedButton:
            text: "Login with Google"
            on_release: root.google_login()

<SignupScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(10)
        size_hint: (None, None)
        size: (300, 400)  # Fixed size for centering
        pos_hint: {"center_x": 0.5, "center_y": 0.5}  # Centering

        MDTextField:
            id: signup_email
            hint_text: "Email"
            helper_text: "Enter your email"
            helper_text_mode: "on_error"

        MDTextField:
            id: signup_password
            hint_text: "Password"
            password: True
            helper_text: "Enter your password"
            helper_text_mode: "on_error"

        MDRaisedButton:
            text: "Sign Up"
            on_release: root.signup_step_one()

        MDRaisedButton:
            text: "Back to Login"
            on_release: app.root.current = 'login'

<PersonalDetailsScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(10)
        size_hint: (None, None)
        size: (300, 400)  # Fixed size for centering
        pos_hint: {"center_x": 0.5, "center_y": 0.5}  # Centering

        MDTextField:
            id: name
            hint_text: "Name"

        MDTextField:
            id: age
            hint_text: "Age"

        MDTextField:
            id: gender_field
            hint_text: "Gender"
            on_focus: if self.focus: root.open_gender_menu()

        MDTextField:
            id: height
            hint_text: "Height (cm)"

        MDTextField:
            id: weight
            hint_text: "Weight (kg)"

        MDTextField:
            id: fitness_goal_field
            hint_text: "Fitness Goal"
            on_focus: if self.focus: root.open_fitness_goal_menu()

        MDRaisedButton:
            text: "Submit"
            on_release: root.submit_details()

        MDRaisedButton:
            text: "Back to Home"
            on_release: app.root.current = 'home'

<HomeScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(10)
        size_hint: (None, None)
        size: (300, 400)  # Fixed size for centering
        pos_hint: {"center_x": 0.5, "center_y": 0.5}  # Centering

        MDLabel:
            id: welcome_label
            text: "Welcome, User!"
            halign: "center"
            font_style: "H5"

        MDRaisedButton:
            text: "Profile & Settings"
            on_release: app.root.current = 'profile_settings'

        MDRaisedButton:
            text: "Workout Plans"
            on_release: app.root.current = 'workout_plans'

        MDRaisedButton:
            text: "Motivation"
            on_release: app.root.current = 'motivation'

        MDRaisedButton:
            text: "Logout"
            on_release: root.logout()

<ProfileSettingsScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(10)
        size_hint: (None, None)
        size: (300, 400)  # Fixed size for centering
        pos_hint: {"center_x": 0.5, "center_y": 0.5}  # Centering

