        MDRaisedButton:
            text: "Back to Home"
            on_release: app.root.current = 'home'

<WorkoutPlansScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(10)
        size_hint: (None, None)
        size: (300, 400)  # Fixed size for centering
