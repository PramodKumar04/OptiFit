MDScreenManager:
    HomeScreen:
    WorkoutPlansScreen:
    DietaryRecommendationsScreen:
    MotivationSupportScreen:
    UserProfileScreen:
    DaywiseWorkoutScreen:
    MotivationQuotesScreen:
    LogoutScreen:

<HomeScreen>:
    name: "home"

    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(10)
        padding: dp(20)

        MDLabel:
            text: "Welcome to the Fitness App!"
            halign: "center"
            font_style: "H5"

        MDRaisedButton:
            text: "Workout Plans"
            pos_hint: {"center_x": .5}
            on_release:
                root.manager.current = "workout_plans"

        MDRaisedButton:
            text: "Dietary Recommendations"
            pos_hint: {"center_x": .5}
            on_release:
                root.manager.current = "dietary_recommendations"

        MDRaisedButton:
            text: "Motivation and Support"
            pos_hint: {"center_x": .5}
            on_release:
                root.manager.current = "motivation_support"

        MDRaisedButton:
            text: "User Profile and Settings"
            pos_hint: {"center_x": .5}
            on_release:
                root.manager.current = "user_profile"

        MDRaisedButton:
            text: "Logout / Exit"
            pos_hint: {"center_x": .5}
            on_release:
                root.manager.current = "logout"

