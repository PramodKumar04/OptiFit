        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(10)
        size_hint: (None, None)
        size: (300, 400)  # Fixed size for centering
        pos_hint: {"center_x": 0.5, "center_y": 0.5}  # Centering

        MDLabel:
            id: quote_label
            text: "Your motivational quote will appear here."
            halign: "center"
            font_style: "H5"

        MDRaisedButton:
            text: "Get Daily Motivation"
            on_release: root.get_daily_quote()

        MDRaisedButton:
            text: "Back to Home"
            on_release: app.root.current = 'home'
